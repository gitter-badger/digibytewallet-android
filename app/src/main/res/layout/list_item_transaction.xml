<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="data" type="io.digibyte.tools.list.items.ListItemTransactionData"/>

        <variable
            name="callback"
            type="io.digibyte.presenter.activities.callbacks.TransactionClickCallback" />
    </data>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> callback.onTransactionClick(data)}"
        android:background="@drawable/transaction_background"
        android:paddingTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/cad_bg"
            android:elevation="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="75dp"
            android:orientation="horizontal"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:drawable="@{data.arrowIcon}" />

            <io.digibyte.presenter.customviews.BRText
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawablePadding="4dp"
                android:maxWidth="215dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@{data.textColor}"
                android:textSize="20sp"
                android:text="@{data.amount}" />

            <View android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"/>

            <io.digibyte.presenter.customviews.BRText
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="6dp"
                android:textColor="#6d6d7e"
                android:textSize="16sp"
                android:text="@{data.timeStamp}" />
        </LinearLayout>

    </RelativeLayout>

</layout>